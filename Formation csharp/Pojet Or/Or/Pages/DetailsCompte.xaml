<PageFunction x:Class="Or.Pages.DetailsCompte"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:models="clr-namespace:Or.Models"
      x:TypeArguments="sys:Int64"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      xmlns:ec="clr-namespace:Or.Business"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetailsCompte">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10" Orientation="Vertical" Grid.Row="0" Grid.Column="0">
            <TextBlock x:Name="Titre" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Détails du compte" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel Margin="10" Orientation="Vertical" Grid.Row="1" Grid.Column="0">
            <TextBlock x:Name="IdCompte" HorizontalAlignment="Stretch" Margin="0,0,0,8" TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>
            <TextBlock x:Name="TypeCompte" HorizontalAlignment="Stretch" Margin="0,0,0,8" TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>
            <TextBlock x:Name="Solde" HorizontalAlignment="Stretch" Margin="0,0,0,8" TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>
        </StackPanel>

        <ListView x:Name="listView" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Grid.ColumnSpan="2" SizeChanged="ListView_SizeChanged">
            <ListView.Resources>
                <ec:EuroConverter x:Key="EuroConverter"/>
                <ec:IsNegativeConverter x:Key="IsNegativeConverter"/>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="80">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding IdTransaction}"
                           Style="{StaticResource TextColumnStyle}"
                           TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Date" Width="200">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Horodatage, StringFormat='dd/MM/yyyy hh:mm:ss'}"
                           Style="{StaticResource TextColumnStyle}"
                           TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Montant" Width="100">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Montant, StringFormat={}{0:C2}, Converter={StaticResource EuroConverter}}"
                       TextAlignment="Right">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource TextColumnStyle}">
                                            <Style.Triggers>
                                                <!-- Montant < 0 → rouge -->
                                                <DataTrigger>
                                                    <DataTrigger.Binding>
                                                        <Binding Path="Montant" Converter="{StaticResource IsNegativeConverter}" />
                                                    </DataTrigger.Binding>
                                                    <DataTrigger.Value>True</DataTrigger.Value>
                                                    <Setter Property="Foreground" Value="Red" />
                                                </DataTrigger>

                                                <!-- Montant >= 0 → vert -->
                                                <DataTrigger>
                                                    <DataTrigger.Binding>
                                                        <Binding Path="Montant" Converter="{StaticResource IsNegativeConverter}" />
                                                    </DataTrigger.Binding>
                                                    <DataTrigger.Value>False</DataTrigger.Value>
                                                    <Setter Property="Foreground" Value="Green" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Margin="10" Orientation="Vertical" Grid.Row="2" Grid.Column="0" >
            <Button x:Name="Retour" Content="Retour" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="Retour_Click" Margin="000,0,0,8"/>
        </StackPanel>
    </Grid>
</PageFunction>
