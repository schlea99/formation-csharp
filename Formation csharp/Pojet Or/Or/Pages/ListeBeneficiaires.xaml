    <PageFunction x:Class="Or.Pages.ListeBeneficiaires"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      xmlns:ec="clr-namespace:Or.Business"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Liste des Beneficiaires" KeepAlive="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>

            <StackPanel Margin="10" Orientation="Vertical" Grid.Row="0" Grid.Column="0">
                <TextBlock x:Name="Titre" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Bénéficiaires" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold"/>
            </StackPanel>

            <StackPanel Margin="10" Orientation="Vertical" Grid.Row="1" Grid.Column="0">
                <TextBlock x:Name="Numero"  Margin="0,0,0,8" HorizontalAlignment="Stretch"  TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>
                <TextBlock x:Name="Nom"     Margin="0,0,0,8" HorizontalAlignment="Stretch"  TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>
                <TextBlock x:Name="Prenom"  Margin="0,0,0,8" HorizontalAlignment="Stretch"  TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>

            </StackPanel>
            <ListView x:Name="listView" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Grid.ColumnSpan="2" SizeChanged="ListView_SizeChanged">
                <ListView.Resources>
                    <ec:EuroConverter x:Key="EuroConverter"/>
                </ListView.Resources>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nom" Width="30">

                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBlock Text="{Binding Nom}"
                                               Style="{StaticResource TextColumnStyle}"
                                               TextAlignment="Center" />
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Prénom" Width="130">

                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBlock Text="{Binding Prénom}"
                                               Style="{StaticResource TextColumnStyle}"
                                               TextAlignment="Center" />
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="N° compte" Width="150">

                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBlock Text="{Binding Solde}"
                                               Style="{StaticResource TextColumnStyle}"
                                               TextAlignment="Right" />
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Actions"  Width="100">

                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Supprimer" Click="GoSupprimer" CommandParameter="{Binding Id}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Margin="10" Orientation="Vertical" Grid.Row="2" Grid.Column="0" >
                <Button Content="Retour" Margin="0,0,0,8"  HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="GoRetour" />              
            </StackPanel>

            <StackPanel Margin="10" Orientation="Vertical" Grid.Row="2" Grid.Column="2" >
                <Button Content="Ajouter un bénéficiaire" Margin=" 120,120,0,8" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="AddBeneficiaire" />
            </StackPanel>


        </Grid>
    </PageFunction>

    <Grid>
        
    </Grid>
</Page>
