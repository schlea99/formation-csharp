<PageFunction x:Class="Or.Pages.Virement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      xmlns:sysglb="clr-namespace:System.Globalization;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Virement">

    <Grid>
        <TextBlock x:Name="Titre" HorizontalAlignment="Left" Margin="100,85,0,0" TextWrapping="Wrap" Text="Virement" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold"/>

        <Label x:Name="labelE" Content="Compte à débiter" HorizontalAlignment="Left" Margin="100,180,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.237,0.385"/>
        <ComboBox x:Name="Expediteur" HorizontalAlignment="Left" Margin="100,210,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Expediteur_SelectionChanged" >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} - {1}">
                                <Binding Path="Id"/>
                                <Binding Path="IdentifiantCarte"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>

            <ComboBox.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="Bold" Foreground="Red" Padding="4" Text="{Binding Name}"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ComboBox.GroupStyle>
        </ComboBox>

        <Label x:Name="labelD" Content="Compte à créditer" HorizontalAlignment="Left" Margin="300,180,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="Destinataire" HorizontalAlignment="Left" Margin="300,210,0,0" VerticalAlignment="Top" Width="120">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} - {1} {2}">
                                <Binding Path="Id"/>
                                <Binding Path="TypeDuCompte"/>
                                <Binding Path="IdentifiantCarte"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>

            <ComboBox.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="Bold" Foreground="Red" Padding="4" Text="{Binding Name}"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ComboBox.GroupStyle>
        </ComboBox>

        <Label x:Name="labelM" Content="Montant" HorizontalAlignment="Left" Margin="500,180,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.132,-0.27"/>
        <TextBox x:Name="Montant" HorizontalAlignment="Left" Margin="500,210,0,0" VerticalAlignment="Top" Width="120" Height="22" TextAlignment="Right" TextWrapping="Wrap"/>

        <Button x:Name="Retour" Content="Retour" HorizontalAlignment="Left" Margin="100,330,0,0" VerticalAlignment="Top" Height="30" Width="80" Click="Retour_Click"/>
        <Button x:Name="button" Content="Valider" HorizontalAlignment="Left" Margin="555,330,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="ValiderVirement_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="250,210,0,0" TextWrapping="Wrap" Text="⟹" VerticalAlignment="Top" Height="22" Width="20"/>

    </Grid>
</PageFunction>
