<Page x:Class="Or.Pages.Accueil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Accueil">

    <Grid>
        <TextBlock x:Name="Titre" HorizontalAlignment="Left" Margin="302,122,0,0" TextWrapping="Wrap" Text="BANQUE" VerticalAlignment="Top" FontSize="36" Background="White"/>
        <Button x:Name="Valider" Content="Valider" HorizontalAlignment="Left" Margin="354,310,0,0" VerticalAlignment="Top" FontSize="18" Click="GoConsultationCarte"/>
        <TextBox x:Name="NumeroCarte" HorizontalAlignment="Left" Margin="288,256,0,0" Foreground="{Binding Color}" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" FontSize="20"/>
        <Label x:Name="labelN" Content="Numéro Carte" HorizontalAlignment="Left" Margin="288,225,0,0" VerticalAlignment="Top" FontSize="14"/>

    </Grid>
</Page>
