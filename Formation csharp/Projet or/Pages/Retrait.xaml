<PageFunction x:Class="Or.Pages.Retrait"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Retrait">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10" Orientation="Vertical" Grid.Row="0" Grid.Column="0">
            <TextBlock x:Name="Titre" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" Text="Retrait" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel Margin="10" Orientation="Vertical" Grid.Row="1" Grid.Column="0">
            <Label x:Name="labelM" Content="Montant" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.132,-0.27" FontSize="14"/>
            <TextBox x:Name="Montant" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextAlignment="Right"/>
        </StackPanel>

        <StackPanel Margin="10" Orientation="Vertical" Grid.Row="1" Grid.Column="2">
            <Label x:Name="labelP" Content="Plafond maximum de retrait" HorizontalAlignment="Stretch" Margin="0,0,0,8" VerticalAlignment="Top" RenderTransformOrigin="0.132,-0.27" FontSize="14"/>
            <TextBlock x:Name="PlafondMaxRetrait" HorizontalAlignment="Left" Margin="0,0,0,8" TextAlignment="left" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Background="#FFD2D0D0" Height="20" FontSize="14"/>

            <Label x:Name="labelS" Content="Solde compte courant" HorizontalAlignment="Stretch" Margin="0,0,0,8" VerticalAlignment="Top" RenderTransformOrigin="0.132,-0.27" FontSize="14"/>
            <TextBlock x:Name="Solde" HorizontalAlignment="Left" Margin="0,0,0,8" TextAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Background="#FFD2D0D0" Height="20" FontSize="14"/>
        </StackPanel>

        <StackPanel Margin="10" Orientation="Vertical" Grid.Row="2" Grid.Column="2">
            <Button x:Name="Retour" Content="Retour" HorizontalAlignment="Stretch" Margin="0,0,0,0" MaxWidth="80" VerticalAlignment="Top" Click="Retour_Click"/>
        </StackPanel>
        <StackPanel Margin="10" Orientation="Vertical" Grid.Row="2" Grid.Column="0">
        <Button x:Name="button" Content="Valider" HorizontalAlignment="Stretch" Margin="0,0,0,0" MaxWidth="80" VerticalAlignment="Top" Click="ValiderRetrait_Click"/>
        </StackPanel>
    </Grid>
</PageFunction>
